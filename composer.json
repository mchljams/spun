{
    "name": "mchljams/spun",
    "type": "library",
    "description": "PHP Library to process strings containing spintax syntax.",
    "keywords": ["spintax", "text spinner"],
    "homepage": "https://github.com/mchljams/spun/",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael James",
            "homepage": "http://mchljams.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Mchljams\\Spun\\": "src"
        }
    },
    "scripts": {
        "unit_test": "phpdbg -qrr ./vendor/bin/phpunit --coverage-html coverage",
        "standards_check": "./vendor/bin/phpcs --standard=PSR12 --tab-width=4 --colors ./src ./tests"
    }
}
